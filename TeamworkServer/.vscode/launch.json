    "configurations": [
        {
            "name": "Debug app.ts",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
            "args": ["./src/index.ts"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "preLaunchTask": "build",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
